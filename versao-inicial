#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <locale.h>


#define TAM 50

struct FaltasDisciplina{
	char disciplina[50];
	int carga_horaria;
	int contadorFaltas;
	
};

typedef struct FaltasDisciplina FaltasDisciplina;

void menuIniciar(){
	printf("OLA, O QUE VOCE DESEJA FAZER HOJE?\n");
	printf("1. CADASTRAR DISCIPLINA. \n");
	printf("2. CONSULTAR MINHAS DISCIPLINAS.\n");
	printf("3. ANOTAR UMA FALTA\n");
	printf("4. ENCERRAR SESS√ÉO");
}
 
int main(){
	
	FaltasDisciplina cadastro_disciplina[10];
	int opcao,resposta;
	
	//Menu inicial
	menuIniciar();
	scanf("%d", &opcao);	
	switch(opcao){
	
	case 1: 
	do{
	int i=0;
		
		printf("Nome da disciplina: ""\n");
		scanf("%50[^\n]s", &cadastro_disciplina[i].disciplina);
		fflush(stdin);
		
		printf("Carga horaria: ");
		scanf("%d", &cadastro_disciplina[i].carga_horaria);
		fflush(stdin);
	i+=1;
	
	printf("DESEJA CADASTRAR OUTRA DISCIPLIA?\n\n1. SIM\n2. NAO");
	scanf("%d", &resposta);
	}while(resposta==1);
	
}
}




